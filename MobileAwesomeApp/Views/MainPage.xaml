<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             x:Class="MobileAwesomeApp.Views.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <StackLayout>
                <Label HorizontalTextAlignment="Center" TextColor="White" FontFamily="MarkerFelt-Thin" FontSize="64" FontAttributes="Bold" Rotation="-10">
                    <Label.Text>
                        Food
                        with
                        Friends
                    </Label.Text>
                </Label>
            </StackLayout>
        </Frame>

        <Button Text="Create a feast..." Clicked="CreateFeast" />
        <Button Text="Join an existing feast..." Clicked="JoinFeast" />
        <Button Text="Show my feasts..." Clicked="ShowFeasts" />

        <Button Text="Show restaurants..." Clicked="ShowRestaurants" />
        <Button Text="Show neighbourhoods..." Clicked="ShowNeighbourhoods" />

    </StackLayout>

</ContentPage>
